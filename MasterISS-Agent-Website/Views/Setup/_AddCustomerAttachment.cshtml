@using MasterISS_Agent_Website.ViewModels.Setup
@model AddCustomerAttachmentViewModel

<div class="modal-header">
    <div class="modal-title"></div>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<div class="modal-body">
    @using (Ajax.BeginForm("AddCustomerAttachment", "Setup", new AjaxOptions { HttpMethod = "POST", OnComplete = "GenericResult" }, new { @enctype = "multipart/form-data" }))
    {
        <div class="error-codes-container" style="display:none">
            <div class="mt-2 my-4"></div>
            <div class="text-danger error-codes" align="center"></div>
            <div class="mt-2 my-4"></div>
        </div>

        @Html.AntiForgeryToken()
        <div class="mb-3">
            @Html.LabelFor(m => m.AttachmentType, new { @class = "col-form-label" })
            @Html.DropDownListFor(m => m.AttachmentType, (SelectList)ViewBag.AttachmentTypes, MasterISS_Agent_Website_Localization.View.Select, new { @class = "form-control" })
        </div>

        <input type="file" name="uploadingFiles" multiple />

        @Html.HiddenFor(m => m.TaskNo)

        <input type="submit" value="@MasterISS_Agent_Website_Localization.View.Submit" class="btn btn-primary" />
    }
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-light-primary font-weight-bold" data-bs-dismiss="modal">@MasterISS_Agent_Website_Localization.View.Close</button>
</div>
